extends base

block content 
    div#home-contents
        div#user-info
            h1.user__clock 00:00:00
            h5.user__greeting Hello, User!
            p.user__quote Always Smile. - Dale Karnegey

        div#goals.home-list
            h3 Goals
            ul#goals__ul
                form
                    input(type="text" required placeholder="New Goals!")
                    input(type="submit" value="Submit")
                

        div#today-recaps.home-list
            h3 Today Recaps
            ul#today-recaps__ul
                

        div#delayed-recaps.home-list
            h3 Delayed Recaps
            ul#delayed-recaps__ul
                
    
    if bgImage
        img(src=`${bgImage}`).background-img


block scripts 
    script(src="/static/js/home.js")