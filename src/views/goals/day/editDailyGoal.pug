extends ../../base

block content
    form(method="POST") 
        input(type="text" name="title" value=`${goal.title}` required)
        input(type="text" name="description" value=`${goal.description}`)
        input(type="date" name="day" value=`${goal.day}` min="2022-01-01" required)
        input(type="number" name="rate" value=`${goal.rate}` required)
        if goal.checked 
            label.switch
            input(type="checkbox" checked name="checkbox")
            span.slider.round
        else
            label.switch
            input(type="checkbox" name="checkbox")
            span.slider.round
        input(type="submit" value="Edit" )
    
    if goal.feedbacks.length !== 0
        ul#feedbackList 
            //- many feedbacks (a)
    else 
        span There is no Feedback...
        br

    a(href=`/feedbacks/create/?addedBy=${goal._id}`) Add Feedback